<body>

<div class="container">
    <h1>Optimizely CMP Asset Picker</h1>
    <p>Klikk på knappen for å velge et bilde fra Optimizelys CMP.</p>
    <button id="openLibrary">Åpne Bibliotek</button>
</div>

<div id="urlModal" class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h2>Valgt bilde</h2>
        <p>URL-en til det valgte bildet er:</p>
        <div id="image-url-display" class="url-box"></div>
    </div>
</div>

<script>
    // Referanser til HTML-elementene
    const openLibraryButton = document.getElementById('openLibrary');
    const urlModal = document.getElementById('urlModal');
    const closeModalButton = document.querySelector('.close-button');
    const imageUrlDisplay = document.getElementById('image-url-display');

    // Funksjon for å håndtere meldingen fra CMP-vinduet
    const handleMessage = (event) => {
        // Sikkerhetskontroll: Sjekk at meldingen kommer fra riktig domene
        if (event.origin !== 'https://cmp.optimizely.com') {
            return;
        }

        // Event.data inneholder JSON-objektet med de valgte ressursene
        const assets = event.data;

        // Sjekk om det er valgt minst ett bilde
        if (assets && assets.length > 0) {
            // Henter URL-en til det første bildet
            const imageUrl = assets[0].url; 

            // Oppdaterer modalen med URL-en
            imageUrlDisplay.textContent = imageUrl;
            
            // Viser modalen
            urlModal.style.display = 'flex';
        }
    };

    // Legger til hendelseslytter for 'message'-hendelsen
    window.addEventListener('message', handleMessage, false);

    // Funksjon for å åpne CMP asset picker i et nytt vindu
    const openLibrary = () => {
        // Definerer alternativer for asset pickeren (f.eks. kun bilder)
        const options = {
            assetTypes: ['image'],
            multiSelect: false
        };

        // Koder alternativene til en Base64-streng for URL-en
        const encodedOptions = window.btoa(JSON.stringify(options));

        // Åpner et nytt popup-vindu med CMP asset picker
        window.open(
            `https://cmp.optimizely.com/cloud/library-picker?pickerOptions=${encodedOptions}`, 
            'LibraryPicker', 
            'width=1200,height=800'
        );
    };

    // Legger til klikk-hendelseslytter på knappen
    openLibraryButton.addEventListener('click', openLibrary);

    // Lukker modalen når man klikker på lukk-knappen
    closeModalButton.addEventListener('click', () => {
        urlModal.style.display = 'none';
    });

    // Lukker modalen hvis man klikker utenfor innholdet
    window.addEventListener('click', (event) => {
        if (event.target === urlModal) {
            urlModal.style.display = 'none';
        }
    });
</script>

</body>
</html>
